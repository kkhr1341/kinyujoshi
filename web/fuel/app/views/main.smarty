<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="viewport-fit=cover, width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>{$title}</title>
    <meta name="description" content="{$description}">
    <meta name="copyright" content="Copyright &copy; きんゆう女子。 All Rights Reserved.">
    <link type="image/x-icon" rel="shortcut icon" href="/images/favicon.png">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="apple-mobile-web-app-title" content="きんゆう女子。">
    <meta property="og:image" content="{$ogimg}">
    {Html::meta($meta)}

    <!-- <link href="https://fonts.googleapis.com/earlyaccess/notosansjapanese.css" rel="stylesheet" /> -->
    <link href="https://fonts.googleapis.com/earlyaccess/notosansjp.css" rel="stylesheet" />
    {literal}
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-72608536-2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-72608536-2');
    </script>
    {/literal}

    {Asset::render('layout')}

    {if isset($lang) && $lang eq 'en'}
    <script type="text/javascript" src="//maps.google.com/maps/api/js?language=en&key=AIzaSyCZqIv_Xh0iQ1XOI1n1Q821t94SNTf0oeQ"></script>
    {else}
    <script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyCZqIv_Xh0iQ1XOI1n1Q821t94SNTf0oeQ"></script>
    {/if}
    <meta name="google-site-verification" content="bt-Z1O8HWo_rQ3TlPedxm8q3q1xV9ky7hWlxAqisA2w" />
    <!-- <link href="https://fonts.googleapis.com/earlyaccess/mplus1p.css" rel="stylesheet" /> -->
    <!-- 紙吹雪 -->
    <!-- <script type="text/javascript" src="/assets/js/kinyu/canvas.js"></script> -->
    <script type="text/javascript" src="/assets/js/kinyu/jquery.cookie.js"></script>

  </head>

  <!-- <body class="drawer drawer--left" onCopy="return false;"> -->
    <body class="drawer drawer--left">
    <!-- <canvas id="canvas"></canvas> -->

    {$pc_header}

    <div class="kinyu-container">
      <div class="kinyu-main">
        {$contents}
        {$sp_footer}
      </div>
    </div>

    <!-- ナビゲーション -->
    {$sp_navigation}
    <div class="sp">{$sp_header}</div>

    <div class="loader-block">
      <div class="loader-block-inner">
        <div class="loader-el">
          <div class="loader loader-1"></div>
          <p>読み込み中...。</p>
        </div>
      </div>
    </div>

    <!-- 広告ポップアップ-->
    <div class="ad-popup">
    <div class="ad-popup-main-block-container">
      <div class="ad-popup-main-block">
        <div class="main-block-inner">
          <div class="ad-image-wrapper">
            <a class="js-popup-hoshino-pc" href="https://candle.karuizawachurch.org/?utm_source=kyj&utm_medium=banner&utm_campaign=XmasCN2018" target="_blank">
              <img class="pc ad-img" src="/images/advertisement/PC.png">
            </a>
            <a class="js-popup-hoshino-sp" href="https://candle.karuizawachurch.org/?utm_source=kyj&utm_medium=banner&utm_campaign=XmasCN2018" target="_blank">
              <img class="sp ad-img" src="/images/advertisement/SP.png">
            </a>
            <div class="kinyu-top-promotion-label"><img src="/images/pr_label_pc.png"></div>
            <p class="pr-text">[PR]</p>
          </div>

          <p id="ad-popup-message-close" class="js-popup-hoshino-close close-btn" style="cursor:pointer;">
            <img src="/images/ad-close-btn.png">
          </p>
        </div>
      </div>
    </div>
    </div>

    {literal}
    <!-- ポップアップ広告-js -->
    <script type="text/javascript">
      $(function() {
        $("#ad-popup-message-close").click(function() {
          $(".ad-popup").fadeOut(500);
          $(".ad-popup-main-block-container").fadeOut(500);
          $('#canvas').removeClass("active");
        });
      });
    </script>

    <script type="text/javascript">
      $(function(){
        if($.cookie("hoshino_resort_popup")){
        }else{
          $('#canvas').addClass("active");
          setTimeout(function(){
            $('.ad-popup').fadeIn(1000);
            $('.ad-popup-main-block-container').fadeIn(1000);
          },3000);
        }
        $(window).load(function(){
          $.cookie("hoshino_resort_popup","access", { expires: 1 });
        })
      });
    </script>

    <script type="text/javascript">
      $(function(){
        $('.js-popup-hoshino-pc').click(function() {
          gtag('event', 'click', {
              'event_category': 'pr',
              'event_label': 'hoshino-popup-pc',
              'event_action': 'link',
              'event_value': 1,
          });
        });
        $('.js-popup-hoshino-sp').click(function() {
          gtag('event', 'click', {
              'event_category': 'pr',
              'event_label': 'hoshino-popup-sp',
              'event_action': 'link',
              'event_value': 1,
          });
        });
        $('.js-popup-hoshino-close').click(function() {
          gtag('event', 'click', {
              'event_category': 'pr',
              'event_label': 'hoshino-popup-sp',
              'event_action': 'close',
              'event_value': 1,
          });
        });
      });
    </script>

    <script src="/assets/js/kinyu/swiper.js"></script>
    {/literal}
  </body>

</html>
