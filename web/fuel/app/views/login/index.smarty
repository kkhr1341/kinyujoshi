      <form>
        <div><input type="text" style="background-color: #fff; border: 1px solid #000;" placeholder="メールアドレス" value=""></div>
        <div><input type="text" style="background-color: #fff; border: 1px solid #000;" placeholder="パスワード" value=""></div>
