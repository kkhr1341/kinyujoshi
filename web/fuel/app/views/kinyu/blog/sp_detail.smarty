      {$blog.content|nofilter}
      <p class="report-bottom">({$blog.open_date|date_format:"Y.m.d"} up!)</p>
      <!-- シェア部分 -->
      <div class="report-detail-share clear">
        <!-- <div class="report-detail-share-el report-detail-share-left" style="background:url({$blog.main_image}) center center / cover no-repeat;"><div class="bg-white05"></div></div> -->
        <div class="report-detail-share-el report-detail-share-right">
          <h3>このレポートをみんなに教える。</h3>
