<div class="report-detail-sidebar-inner">

  <!-- 編集部のおすすめレポート -->
  <div class="report-detail-sidebar-el">
    <p class="report-detail-sidebar-el-title">編集部のおすすめレポート</p>
    <div class="report-sidebar-report-list">
      <ul class="clear">
        {foreach from=$top_blogs item=blog name=loopname}

        {if $smarty.foreach.loopname.index == 3}
        </ul>
          <div class="sidebar-more-link">
            <a href="/report">レポートをもっと見る >
            </a>
          </div>
          {break}
        {/if}

        {$fooo = $blog.main_image}
        {$thumb_filename = $fooo|regex_replace:"/(.+)\/(.+\.jpg|.+\.jpeg|.+\.JPG|.+\.png|.+\.gif)$/":"$1/thumb_$2"}

        <li class="clear">
          <a href="/report/{$blog.code}">
            <div class="img-box" style="background:url({$thumb_filename}) center center / cover no-repeat;"></div>
            <div class="text-box">
              <p class="title">{$blog.title}</p>
            </div>
          </a>
        </li>
        {/foreach}
      </ul>
    </div>
  </div>

    <!-- 直近の女子会 -->
  <div class="report-detail-sidebar-el">
    <p class="report-detail-sidebar-el-title">今後の女子会の予定</p>
    <div class="report-sidebar-event-list">
      <ul class="clear">
        {foreach from=$top_events item=event name=loopname}
        {if $smarty.foreach.loopname.index == 3}
        </ul>
          <div class="sidebar-more-link">
            <a href="/joshikai">女子会をもっと見る ></a>
          </div>
          {break}
        {/if}

        {$fooo = $event.main_image}
        {$thumb_filename = $fooo|regex_replace:"/(.+)\/(.+\.jpg|.+\.jpeg|.+\.JPG|.+\.png|.+\.gif)$/":"$1/thumb_$2"}

        <li class="clear">
          {if empty($event.specific_link)}
          <a href="/joshikai/{$event.code}">
          {else}
          <a href="{$event.specific_link}" target="_blank">
          {/if}
            <div class="img-box" style="background:url({$thumb_filename}) center center / cover no-repeat;"></div>
            <div class="text-box">
              <!-- <p class="date">{$event.event_date|date_format:"Y.m.d"}（{$event.event_date|date_format:"%a"|replace:"Sun":"日"|replace:"Mon":"月"|replace:"Tue":"火"|replace:"Wed":"水"|replace:"Thu":"木"|replace:"Fri":"金"|replace:"Sat":"土"}）</p> -->
              <div class="kinyu-top-list-kind kinyu-top-event-kind">
                <p>
                  <span class="date-box">
                    {if $event.display_event_date}
                      <span class="date">{$event.display_event_date}</span>
                    {else}
                      <span class="date">{$event.event_date|date_format:"%-m.%-e"}</span>
                      {$event.event_date|date_format:"(%a)"|replace:"Sun":">日"|replace:"Mon":"月"|replace:"Tue":"火"|replace:"Wed":"水"|replace:"Thu":"木"|replace:"Fri":"金"|replace:"Sat":"土"}
                    {/if}
                  </span>
                </p>
              </div>
              <p class="title">{$event.title}</p>
            </div>
          </a>
        </li>
        {/foreach}
      </ul>
    </div>
  </div>

  <!-- 編集部へのコメント -->
  <div class="report-detail-sidebar-el">
    <p class="report-detail-sidebar-el-title">あなたのワカラナイこと、教えてください！</p>
    <div class="">
      <form>
        <textarea id="message" name="message" class='' rows="10"></textarea>
        <button class="btn btn-kinyu" type="button" id="save" data-code="{$blog.code}">送信する</button>
      </form>
    </div>
  </div>

</div>

