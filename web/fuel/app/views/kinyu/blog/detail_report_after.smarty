{literal}
<script>

$(window).load(function(){
  var ddddd = $(".f-instagram-block .f-instagram-el li a").innerWidth();
  console.log(ddddd);
  $(".f-instagram-block .f-instagram-el li a").height(ddddd);
});

$(function(){

  $('#save').click(function(){
    var url = "/api/blogcomments/create";
    var blog_code = $(this).data('code');
    var params = {
      "blog_code": blog_code
    };

    params.message = $('#message').val();

    if (params.message == "") {
      ts.error("編集部へのコメントを記入してください。");
      return false;
    }

    bootbox.confirm("編集部へのコメントを送信しますか？", function(result) {
      if (result) {
        ajax.post(url, params, function(data){
          document.getElementById("message").value="";

          $(".loader-block").fadeIn(500);

          setTimeout(function(){
            $(".loader-block").fadeOut(500);
          },2500);

          setTimeout(function(){
            $('.report-detail-comment-popup').fadeIn(800);
          },3000);
        });
      }
      else {
        ts.info("キャンセルしました");
      }
    });
  });
  $(".report-detail-comment-popup-close").click(function() {
    $(".report-detail-comment-popup").fadeOut(800);
  });
});
</script>
{/literal}

