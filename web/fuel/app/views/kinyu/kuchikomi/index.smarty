      $('#save').click(function(){
        var url = "/api/kuchikomi/create";
        var params = {};

        params.nickname = $('#nickname').val();
        params.message = $('#message').val();
        
        if (params.nickname == "") {
          ts.error("メールアドレスを入力してください");
          return false;
        }
        if (params.message == "") {
          ts.error("ワカラナイこと・気になることを入力してください");
          return false;
        }

        bootbox.confirm("勉強会をリクエストしますか？", function(result) {
          if (result) {
            ajax.post(url, params, function(data){
              location.href = "/request/complete";
            });
          }
          else {
            ts.info("キャンセルしました");
          }
        });
      });
    });
