        <div class="insta-link-block">
          <a class="insta-link" href="https://www.instagram.com/kinyu_joshi/" target="_blank">Instagramページへ</a>
        </div>
      </div>
    </div>

    <div class="kinyu-top-list">
      <h3 class="kinyu-main-title"><img src="/images/main-title/kinyu-title-report.png" alt="レポート一覧"></h3>
      <ul class="clear">
      {foreach from=$blogs.datas key="key" item=blog name=loopname}

        {$fooo = $blog.main_image}
        {$thumb_filename = $fooo|regex_replace:"/(.+)\/(.+\.jpg|.+\.jpeg|.+\.JPG|.+\.png|.+\.gif)$/":"$1/thumb_$2"}

        <li>
          <a href="/report/{$blog.code}">
          <div class="img-box" style="background: url({$thumb_filename}) center center / cover no-repeat;""></div>
          <div class="kinyu-top-list-kind">
            {if $blog.kind == "女子会レポート"}
              <p>女子会レポート</p>
